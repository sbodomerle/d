[alias]
	check-whitespace = !git diff-tree --check $(git hash-object -t tree /dev/null) HEAD
	ctags = !$(git rev-parse --git-dir)/hooks/ctags
	it = "!f() { git -C \"$1\" init; git -C \"$1\" commit -m \"root\" --allow-empty; }; f"
[init]
	templatedir = ~/.config/git/template
[merge]
	conflictstyle = diff3
